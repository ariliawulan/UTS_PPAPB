<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#750505"
    android:orientation="vertical"
    tools:context=".OrderSummary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginStart="45dp"
            android:text="Order Summary"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="@font/asul"/>
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/movie"
                    android:src="@drawable/sherina"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/Judulfilm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/asul">
                    </TextView>
                    <TextView
                        android:id="@+id/BioskopFilm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/asul">
                    </TextView>
                    <TextView
                        android:id="@+id/date5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/asul">
                    </TextView>
                    <TextView
                        android:id="@+id/time5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/asul">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="#777777">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777">
            </TextView>
            <TextView
                android:id="@+id/ordernumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="225588976"
                android:fontFamily="@font/asul"
                android:textColor="#777777">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/jenis_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/asul"
                android:textColor="#777777">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asul"
                android:textSize="12sp"
                android:textColor="#777777">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/kelas_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/asul"
                android:textColor="#777777">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coveniece Fee"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/convience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="0"
                android:fontFamily="@font/asul"
                android:textColor="#777777">
            </TextView>

            <ImageView
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@color/black">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actual Pay"
                android:fontFamily="@font/asul"
                android:textSize="16sp"
                android:textColor="#777777">
            </TextView>
            <TextView
                android:id="@+id/fee2"
                android:fontFamily="@font/asul"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="18sp"
                android:textColor="#777777">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>